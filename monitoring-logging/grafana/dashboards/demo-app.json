{
  "title": "Demo App Overview",
  "schemaVersion": 39,
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU (cores)",
      "targets": [
        { "expr": "sum(rate(container_cpu_usage_seconds_total{pod=~\"demo-app.*\"}[5m]))" }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Memory (bytes)",
      "targets": [
        { "expr": "sum(container_memory_working_set_bytes{pod=~\"demo-app.*\"})" }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    }
  ]
}

